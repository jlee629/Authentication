<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  
<div class="content">
    <!-- Main Content -->
    <h3 class="intro"><%= title %></h3>
    <main class="container">     
        <% if(typeof displayName == 'string' && displayName) {%>
        <a href="/contact-list/add" class="btn btn-primary float-left" role="button">
        <i class="fas fa-plus-circle"></i> Add a Contact</a>
        <% } %>
        <br>
        <table class="table table-bordered table-sm">
            <!-- Header Row-->
            <tr class="thead-dark">
                <% if(typeof displayName == 'string' && displayName) {%>
                    <th class="text-center col-2">Contact Name</th>
                    <th class="text-center col-2">Contact Number</th>
                    <th class="text-center col-2">Email Address</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                <% } else { %>
                    <th class="text-center col-2">Contact Name</th>
                    <th class="text-center col-2">Contact Number</th>
                    <th class="text-center col-2">Email Address</th>
                <% } %>
            </tr>

            <!-- Repeatable Template Row -->

            <% for(let count = 0; count < ContactList.length; count++) { %>
                <tr class="">
                    <% if(typeof displayName == 'string' && displayName) {%>
                        <td class="text-center col-2"><%= ContactList[count].name %></td>
                        <td class="text-center col-2"><%= ContactList[count].number %></td>
                        <td class="text-center col-2"><%= ContactList[count].email %></td>
                        
                        <td class="text-center col-1">
                            <a href="/contact-list/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Update</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm delete">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    <% } else { %>
                        <td class="text-center col-2"><%= ContactList[count].name %></td>
                        <td class="text-center col-2"><%= ContactList[count].number %></td>
                        <td class="text-center col-2"><%= ContactList[count].email %></td>
                    <% } %>
                </tr>
            <% } %>
        </table>
            
       
    </main>
</div>  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





