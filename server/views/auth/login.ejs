<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
<div class="content">
    <h3 class="intro center"><%= title %></h3>

    <main class="container">
    <!-- Message Area -->

    <% if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>

        <div class="row">
            <div class="offset-md-4 col-md-4">
                <form method="POST" autocomplete="off">
                    <fieldset class="form-group">
                        <label class="font-weight-bold float-left" for="username">Username </label>
                        <input type="text" class="form-control"
                        name="username" placeholder="Enter username"
                        id="username" required autofocus>
                    </fieldset>
                    <fieldset class="form-group">
                        <label class="font-weight-bold float-left" for="password">Password </label>
                        <input type="password" class="form-control"
                        name="password" placeholder="Enter password"
                        id="password" required autofocus>
                        <div class="float-left"> or <a href="/register">Register Here</a></div>
                    </fieldset>
                    <fieldset class="form-group text-right">
                        <input type="submit" class="btn btn-success" value="Login">
                        <a href="/">
                            <input type="button" class="btn btn-warning" value="Cancel">
                        </a>
                    </fieldset>
                </form>
            </div>
        </div>

    </main>
</div>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>